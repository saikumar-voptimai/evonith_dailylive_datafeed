{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File Live",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["--mode=live", "--db-write=True", "--retain-file=True", "--debug=True"],
    },

    {
      "name": "Python Debugger: Current File Daily",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["--mode=daily", "--db-write=True", "--startdate=05-25-2025", "--enddate=05-26-2025", "--retain-file=True", "--debug=True"],
    },

    {
      "name": "Python Debugger: Current File Date",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["--mode=daily", "--db-write=True", "--date=05-27-2025", "--retain-file=False", "--debug=True", "--log-run=False"],
    }
  ]
}